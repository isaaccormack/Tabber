{
    "name": "tabber",
    "version": "0.0.1",
    "description": "Play licks, get tabs.",
    "scripts": {
        "start": "tsc && node bin/www",
        "build": "(cd ../webapp && npm run build) && tsc",
        "dev": "nodemon -e js bin/www",
        "unit-jest": "tsc && jest --coverage dist/test/controller/*.spec.js dist/test/middleware/*.spec.js",
        "integration-jest": "tsc && jest --coverage dist/test/integration/index.spec.js && jest --coverage dist/test/integration/user.spec.js && jest --coverage dist/test/integration/lick.spec.js && jest --coverage dist/test/integration/userLicks.spec.js && jest --coverage dist/test/integration/userSharedLicks.spec.js",
        "update-views": "(cd ../webapp && npm run build)",
        "clean": "rm -rf node_modules",
        "fully-rebuild": "npm run clean && npm install && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/isaaccormack/Tabber.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/isaaccormack/Tabber/issues"
    },
    "devDependencies": {
        "@shopify/jest-koa-mocks": "^2.2.2",
        "@types/jest": "^25.2.3",
        "@types/koa": "^2.0.45",
        "@types/koa-bodyparser": "^4.2.0",
        "@types/koa-logger": "^3.1.1",
        "@types/koa-router": "^7.4.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^9.6.56",
        "@types/supertest": "^2.0.9",
        "@types/uuid": "^8.0.0",
        "jest": "^26.0.1",
        "jest-serial-runner": "^1.1.0",
        "jwt-decode": "^2.2.0",
        "nodemon": "^2.0.4",
        "sinon": "^9.0.2",
        "supertest": "^4.0.2",
        "typescript": "^3.9.1"
    },
    "dependencies": {
        "bufferutil": "^4.0.1",
        "canvas": "^2.6.1",
        "class-validator": "^0.12.0",
        "csv-parse": "^4.10.1",
        "fluent-ffmpeg": "^2.1.2",
        "get-audio-duration": "^2.0.2-beta.0",
        "googleapis": "^51.0.0",
        "koa": "^2.5.0",
        "koa-body": "^4.1.3",
        "koa-bodyparser": "^4.2.0",
        "koa-helmet": "^5.2.0",
        "koa-logger": "^3.2.1",
        "koa-router": "^7.4.0",
        "koa-static": "^5.0.0",
        "koa2-formidable": "^1.0.2",
        "mysql": "^2.15.0",
        "shelljs": "^0.8.4",
        "typeorm": "^0.2.0",
        "utf-8-validate": "^5.0.2",
        "uuid": "^8.1.0"
    }
}
