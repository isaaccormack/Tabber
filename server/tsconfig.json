{
    "version": "2.0.2",
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es6",
        "outDir": "./dist",
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules"
    ]
}
